{
  "manifest_version": 3,
  "name": "SafePaste",
  "description": "Privacy-first AI clipboard layer that redacts PII/secrets before pasting into AI assistants.",
  "version": "0.1.0",
  "permissions": ["storage", "clipboardRead"],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "http://localhost/*"
  ],
  "action": {
    "default_title": "SafePaste"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://gemini.google.com/*"
      ],
      "js": ["src/contentScript.js"],
      "css": ["assets/content.css"],
      "run_at": "document_idle"
    }
  ]
}


